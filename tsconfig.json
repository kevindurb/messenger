{
  "compilerOptions": {
    "preserveWatchOutput": true,
    "strict": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true
  }
}
